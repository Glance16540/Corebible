@model Corebible.Models.CodeFirst.Groups
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
    var user = User.Identity.GetUserId();
}

<a href="@Url.Action("Index", "Groups")">
    <span class="fa fa-arrow-circle-left" style="font-size:32px"></span>
</a>

<br />
<br />

<div class="row">
    <div class="col-md-10">
        <h2>@Model.Name</h2>

        <h4>
            <i>
                @Html.DisplayFor(model => model.Description)
            </i>
        </h4>
    </div>
    <div class="col-md-2">
        <center>
            <a href="#" title="Report Group" class="btn btn-danger">Report Group</a>

            <br />
            <br />

            @if (User.Identity.GetUserId() == Model.OwnerId)
            {
                <a href="@Url.Action("Edit", "Groups", new { id = Model.Id })" title="Edit Group">
                    <span style="font-size:25px" class="fa fa-pencil-square-o"></span>
                </a>

                <span>&nbsp; &nbsp;</span>

                <a href="@Url.Action("Delete", "Groups", new { id = Model.Id })" title="Delete Group">
                    <span style="font-size:25px;color:red" class="fa fa fa-trash-o"></span>
                </a>
            }
        </center>
    </div>
</div>

<hr />
<br />

<div>

    <div class="row">
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="text-center">
                        Status
                    </h3>
                </div>
                <div class="panel-body">
                    <center>
                        @if (Model.Active == true)
                        {
                            <p>Active</p>
                        }
                        else
                        {
                            <p>Closed</p>
                        }
                    </center>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="text-center">
                        Members
                    </h2>
                </div>
                <div class="panel-body">
                    <center>
                        @if (Model.Members.Count == 0)
                        {
                            <i>This Group has no Members</i>
                        }
                        else
                        {
                            foreach (var member in Model.Members)
                            {
                                @member.FullName <br />
                            }
                        }
                    </center>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="text-center">
                        Group Owner
                    </h3>
                </div>
                <div class="panel-body">
                    <center>
                        <a style="color:black" href="@Url.Action("UserProfile", "Account", new { id = Model.OwnerId }, null)">
                            @Model.Owner.FullName
                        </a>
                    </center>
                </div>
            </div>
        </div>
    </div>

</div>

<center>
    <h2>
        Chat with your Group
    </h2>

    <textarea class="text-center" placeholder="Message to your group members..." name="Comments" cols="80" rows="6"></textarea>

    <br />

    <input type="submit" value="Send Message" class="btn btn-primary" />

    <br />

    <!--COMMENTS-->
</center>
