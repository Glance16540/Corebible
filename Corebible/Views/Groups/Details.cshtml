@model Corebible.Models.CodeFirst.Groups
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<hr />

<div>

    <dl class="dl-horizontal">
        <dt>
            No. of Members
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Members.Count())
        </dd>

        <dt>
            Group Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Status
        </dt>

        @if (Model.Active == true)
        {
            <dd>Active</dd>
        }
        else
        {
            <dd>Closed</dd>
        }

        <dt>
            Owner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner.FullName)
        </dd>

        <dt>
            Created
        </dt>

        <dd>
            @Model.Created.ToString("d")
        </dd>

    </dl>
</div>
<p>

    @if (User.Identity.GetUserId() == Model.OwnerId)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) <br />
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) <br />
    }
     
    @Html.ActionLink("Back to List", "Index")

</p>
