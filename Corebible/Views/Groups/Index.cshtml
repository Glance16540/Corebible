@model IEnumerable<Corebible.Models.CodeFirst.Groups>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>My Groups</h2>
    </div>
    <div class="col-md-6">
        <p class="pull-right">
            <a href="@Url.Action("Create", "Groups")" class="btn btn-primary">Create New Group</a>
        </p>
    </div>
</div>

<br />

<table class="table">
    <tr>
        <th>
            Group Name
        </th>
        <th>
            No. of Members
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Status
        </th>
        <th>
            Group Owner
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @if (item.Active == true)
        {
            <td>
                Active
            </td>
        }
        else
        {
            <td>
                Closed
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Owner.FullName)
        </td>
        <td>
            @if (User.Identity.GetUserId() == item.OwnerId)
            {
                @Html.ActionLink("Edit Group", "Edit", new { id = item.Id }) <br />
                @Html.ActionLink("Delete Group", "Delete", new { id = item.Id }) <br />
            }
            
            @Html.ActionLink("View Group", "Details", new { id=item.Id })
            
        </td>
    </tr>
}

</table>
